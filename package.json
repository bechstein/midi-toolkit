{
  "name": "@bechstein/midi-parser",
  "version": "1.0.0",
  "description": "A MIDI Message parser for simplified event handling",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/types/index.d.ts"
    }
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/types/index.d.ts",
  "scripts": {
    "lint": "npm run eslint && npm run prettier -- --check",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{ts,js}\"",
    "build": "rollup -c",
    "clean": "rimraf ./dist",
    "prepublishOnly": "npm ci && npm run clean && npm run build"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bechstein/midi-parser.git"
  },
  "keywords": [
    "midi",
    "parser"
  ],
  "author": "C. Bechstein Digital GmbH",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bechstein/midi-parser/issues"
  },
  "homepage": "https://github.com/bechstein/midi-parser#readme",
  "devDependencies": {
    "@angular/cli": "^18.0.5",
    "@rollup/plugin-typescript": "^11.1.6",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "rimraf": "^5.0.7",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.6.3",
    "typescript": "^5.5.2"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
